# MySQL (app)
# Ces variables sont lues par l'application PHP (PDO) pour se connecter à MariaDB.
DB_DSN="mysql:host=127.0.0.1;port=3306;dbname=vite_gourmand;charset=utf8mb4"
DB_USER="vg_user"
DB_PASS="vg_password"

# MariaDB (Docker)
# Ces variables sont lues par le conteneur MariaDB pour initialiser la base et l'utilisateur.
# Elles doivent rester cohérentes avec DB_DSN / DB_USER / DB_PASS.
MARIADB_ROOT_PASSWORD="rootpass"
MARIADB_DATABASE="vite_gourmand"
MARIADB_USER="vg_user"
MARIADB_PASSWORD="vg_password"

# MongoDB (app)
# MONGO_DSN / MONGO_DB sont utilisés par l'app ; MONGO_INITDB_* initialise le conteneur.
MONGO_DSN="mongodb://root:rootpass@127.0.0.1:27017"
MONGO_DB="vite_gourmand"
MONGO_INITDB_ROOT_USERNAME="root"
MONGO_INITDB_ROOT_PASSWORD="rootpass"

# Mail
MAILER_DSN="smtp://LOGIN_BREVO:MDP_BREVO@smtp-relay.brevo.com:587?encryption=tls"
MAIL_FROM_EMAIL="your-email@example.com"
MAIL_FROM_NAME="Vite Gourmand"
MAIL_NOTIFY_EMAIL="backoffice@vite-gourmand.local"
MAIL_NOTIFY_NAME="Equipe Vite Gourmand"
APP_URL="http://localhost"
